{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "react/no-unescaped-entities": "error",  // This rule catches unescaped characters like apostrophes
    "quotes": ["error", "single", { "avoidEscape": true }],  // Ensures single quotes are used and escaped if needed
    "semi": ["error", "always"],  // Enforces semicolons (optional)
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off"
  }
}
